generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  CUSTOMER
}

enum RatingType {
  POSITIVE
  NEGATIVE
}

enum DebilitiesType {
  VISION
  NEURODIVERGENT
  PHYSICAL
  HEARING
}

enum AddressType {
  PUBLIC
  PRIVATE
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String
  password String
  type     UserType
  ratings  Rating[]
}

model Rating {
  id         String         @id @default(cuid())
  fileUrl    String
  upvote     Int            @default(0)
  downvote   Int            @default(0)
  ratingType RatingType
  debilty    DebilitiesType
  user       User           @relation(fields: [userId], references: [id])
  userId     String
  Address    Address[]
}

model Address {
  id           String      @id @default(cuid())
  zipCode      String
  UF           String
  city         String
  street       String
  neighborhood String
  number       String?
  latitude     String?
  longitude    String?
  type         AddressType
  rating       Rating      @relation(fields: [ratingId], references: [id])
  ratingId     String
}
